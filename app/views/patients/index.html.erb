<p id="notice"><%= notice %></p>

<h1>Listing Patients</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      
            <th colspan="3">Doctor</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
       
        <td><%= patient.doctor.first_name %></td>
        <td><%= link_to 'Show', patient  , class:"btn btn-warning" %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) , class:"btn btn-info" %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path , class:"btn btn-danger" %>
