<p id="notice"><%= notice %></p>

<h1>Listing Doctors</h1>

<table>
  <table class="table table-hover">
  <thead>
    <tr>
     
      <th>License no</th>
      
      <th colspan="3"> Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.license_no %></td>
         <td>
          <%  doctor.patients.each do |patient| %>
          <%= patient_format(patient) %>
          <br>
          <%end%>
          </td>
        <td><%= link_to 'Show', doctor, class:"btn btn-warning" %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) , class:"btn btn-info" %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doctor', new_doctor_path  , class:"btn btn-danger" %>

